{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/usr/bin/clang++", // ← Изменено на clang++
      "args": [
        "-std=c++14", // или -std=gnu++14 — зависит от твоего кода
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g", // отладочная информация для debugger'а
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}